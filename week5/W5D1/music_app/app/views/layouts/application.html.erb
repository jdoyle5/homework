<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
    <h1><%= link_to 'MusicApp', bands_url %></h1>
    <div>
    <% if current_user.nil? %>
      <%= button_to 'Sign in', new_session_url, method: :get %>
      <%= button_to 'Sign up', new_user_url, method: :get %>
    <% else %>
      <%= current_user.email %>
      <%= button_to 'Logout', session_url, method: :delete %>
    <% end %>
    </div>
    </nav>

    <%= yield %>
  </body>
</html>
